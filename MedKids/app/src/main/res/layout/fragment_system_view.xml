<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewmodel"
            type="com.endurance.medkids.ui.infoView.viewmodels.SystemViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="25dp"
                android:orientation="horizontal">

                <ImageView

                    android:layout_width="55dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/flechaizquier"
                    android:contentDescription="return info view" />

                <LinearLayout
                    android:layout_width="250dp"
                    android:layout_height="100dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{viewmodel.title}"
                        android:textColor="@color/black"
                        android:fontFamily="sans-serif-medium"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:textSize="35dp"/>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.cardview.widget.CardView
                    android:layout_width="339dp"
                    android:layout_height="626dp"
                    android:layout_gravity="center"
                    android:layout_margin="17dp"

                    android:backgroundTint="@color/card_login"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="5dp">

                    <ImageView
                        android:id="@+id/image_puzzle_img"
                        android:layout_width="400dp"
                        android:layout_height="400dp"
                        android:layout_gravity="center" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/floatingActionInfoSightNose"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginTop="132dp"
                            android:backgroundTint="@color/white"
                            android:clickable="true"
                            app:fabCustomSize="47dp"

                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.137"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:maxImageSize="30dp"
                            app:srcCompat="@drawable/exclamation_rose"
                            android:contentDescription="TODO" />

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/floatingAction2"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginTop="304dp"
                            android:backgroundTint="@color/white"
                            android:clickable="true"
                            android:contentDescription="TODO"
                            app:fabCustomSize="47dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.659"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:maxImageSize="30dp"
                            app:srcCompat="@drawable/exclamation_rose" />

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/floatingAction3"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginTop="180dp"
                            android:backgroundTint="@color/white"
                            android:clickable="true"

                            android:contentDescription="TODO"
                            app:fabCustomSize="47dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.436"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:maxImageSize="30dp"
                            app:srcCompat="@drawable/exclamation_rose" />

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/floatingAction4"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginTop="364dp"
                            android:backgroundTint="@color/white"
                            android:clickable="true"

                            android:contentDescription="TODO"
                            app:fabCustomSize="47dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.628"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:maxImageSize="30dp"
                            app:srcCompat="@drawable/exclamation_rose" />

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/floatingAction5"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginTop="228dp"
                            android:backgroundTint="@color/white"
                            android:clickable="true"

                            android:contentDescription="TODO"
                            app:fabCustomSize="47dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.498"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:maxImageSize="30dp"
                            app:srcCompat="@drawable/exclamation_rose" />

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/floatingAction6"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginTop="288dp"
                            android:backgroundTint="@color/white"
                            android:clickable="true"

                            android:contentDescription="TODO"
                            app:fabCustomSize="47dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.463"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:maxImageSize="30dp"
                            app:srcCompat="@drawable/exclamation_rose" />

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/floatingAction7"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginTop="364dp"
                            android:backgroundTint="@color/white"
                            android:clickable="true"

                            android:contentDescription="TODO"
                            app:fabCustomSize="47dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.243"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:maxImageSize="30dp"
                            app:srcCompat="@drawable/exclamation_rose" />


                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>