<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">



            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background">



                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/shapeableImageView"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_marginTop="50dp"
                    android:src="@drawable/medkids"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.496"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/btn_login_loading_view"
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="52dp"
                    android:background="@drawable/button_background"
                    android:elevation="13dp"
                    android:text="Login"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.502"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/shapeableImageView" />

                <Button
                    android:id="@+id/btnguestLogin"
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/button_background"
                    android:backgroundTint="@color/button_guestLogin"
                    android:elevation="200dp"
                    android:text="Guest Login"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.502"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btn_login_loading_view" />

                <LinearLayout

                    android:layout_width="366dp"
                    android:layout_height="132dp"
                    android:gravity="center_horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btnguestLogin">

                    <TextView
                        android:id="@+id/textView"

                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginTop="50dp"
                        android:text="Don't have an account? Click"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.35"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/btnguestLogin" />

                    <Button
                        android:id="@+id/btn_to_register"
                        android:layout_width="50dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="50dp"
                        android:background="@color/background"
                        android:elevation="0dp"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:stateListAnimator="@null"
                        android:text="here"
                        android:textAlignment="viewEnd"
                        android:textAllCaps="false"
                        android:textColor="@color/link_color"
                        android:textColorLink="#29A0AF"
                        android:textSize="20sp"
                        app:layout_constraintStart_toEndOf="@+id/textView"
                        app:layout_constraintTop_toBottomOf="@+id/btnguestLogin" />
                </LinearLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>
</layout>
