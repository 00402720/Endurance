<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

   <data>
      <!-- Define tus variables de datos aquí, si las tienes -->
   </data>

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:fillViewport="true">


      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical">


         <androidx.constraintlayout.widget.ConstraintLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/background">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView_learn_about"
                android:layout_width="324dp"
                android:layout_height="219dp"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/button_guestLogin"
                android:padding="16dp"
                app:cardCornerRadius="15dp"
                app:cardMaxElevation="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_vertical"
                   android:orientation="vertical"
                   android:padding="12dp">

                  <ImageView
                      android:layout_width="150dp"
                      android:layout_height="150dp"
                      android:src="@drawable/cerebelo" />
               </LinearLayout>

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="180dp"
                   android:layout_marginTop="80dp"
                   android:orientation="horizontal">

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:fontFamily="sans-serif-medium"
                      android:text="@string/titlecard"
                      android:textColor="@color/black"
                      android:textSize="19sp"
                      android:textStyle="bold" />
               </LinearLayout>

               <LinearLayout
                   android:layout_width="162dp"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="170dp"
                   android:layout_marginTop="100dp"
                   android:orientation="horizontal">

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:fontFamily="sans-serif-medium"
                      android:text="@string/tittle2"
                      android:textColor="@color/black"
                      android:textSize="19sp"
                      android:textStyle="bold" />

               </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/test_your_knowledge"
                android:layout_width="324dp"
                android:layout_height="219dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/card_emoji"
                android:padding="16dp"
                app:cardCornerRadius="15dp"
                app:cardMaxElevation="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView_learn_about">

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_vertical"
                   android:orientation="vertical"
                   android:padding="12dp">

                  <ImageView
                      android:layout_width="150dp"
                      android:layout_height="150dp"
                      android:src="@drawable/emoji" />
               </LinearLayout>

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="180dp"
                   android:layout_marginTop="80dp"
                   android:orientation="horizontal">

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:fontFamily="sans-serif-medium"
                      android:text="@string/titlecard2"
                      android:textColor="@color/black"
                      android:textSize="25sp"
                      android:textStyle="bold" />
               </LinearLayout>

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="200dp"
                   android:layout_marginTop="105dp"
                   android:orientation="horizontal">

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:fontFamily="sans-serif-medium"
                      android:text="@string/tittlecard3"
                      android:textColor="@color/black"
                      android:textSize="19sp"
                      android:textStyle="bold" />

               </LinearLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:orientation="vertical"
                android:background="@color/background_text"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:gravity="center"
                   android:layout_height="wrap_content">
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textStyle="bold"

                      android:layout_margin="10dp"
                      android:textColor="@color/white"
                      android:textSize="50sp"
                      android:text="¡FUN FACT!"/>
               </LinearLayout>
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">


               <TextView
                   android:layout_width="100dp"
                   android:text="¿"

                   android:textSize="150sp"
                   android:textStyle="bold"
                   android:textColor="@color/button_guestLogin"
                   android:textAlignment="center"
                   android:layout_height="match_parent"/>
               <me.biubiubiu.justifytext.library.JustifyTextView
                   android:layout_width="200dp"

                   android:layout_height="match_parent"
                   android:textSize="20sp"
                   android:textStyle="bold"
                   android:textColor="@color/white"
                   android:text="Did you know that honey never spoils? Archaeologists have found pots of honey in ancient Egyptian tombs that are over 3,000 years old and still perfectly edible!"/>
               <TextView
                   android:layout_width="109dp"
                   android:text="?"
                   android:textSize="150sp"
                   android:textStyle="bold"
                   android:textColor="@color/button_guestLogin"
                   android:textAlignment="center"
                   android:layout_height="match_parent"/>
              </LinearLayout>



            </LinearLayout>

         </androidx.constraintlayout.widget.ConstraintLayout>


      </LinearLayout>
   </ScrollView>
</layout>

